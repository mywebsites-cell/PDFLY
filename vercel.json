{
  "buildCommand": "echo 'Build complete'",
  "outputDirectory": ".",
  "public": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "http://localhost:5000/:path*"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.html"
    },
    {
      "src": "/style.css",
      "dest": "/style.css"
    },
    {
      "src": "/theme.js",
      "dest": "/theme.js"
    },
    {
      "src": "/favicon.PNG",
      "dest": "/favicon.PNG"
    },
    {
      "src": "/images/(.*)",
      "dest": "/images/$1"
    },
    {
      "src": "/frontend/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "env": {
    "BACKEND_URL": "@backend_url"
  },
  "functions": {
    "backend/app.py": {
      "runtime": "python3.9",
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
